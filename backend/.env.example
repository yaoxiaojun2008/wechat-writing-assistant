# Server Configuration
NODE_ENV=development
PORT=3001

# For production environments, you may want to:
# 1. Use a different port (commonly 80 for HTTP or let platform assign)
# 2. Use reverse proxy (nginx) for SSL termination on port 443
# Example for production:
# NODE_ENV=production
# PORT=3001  # Application internal port, reverse proxy handles 443->3001

# Frontend URL (important for CORS in separate deployment)
# For local development:
# FRONTEND_URL=http://localhost:3000

# For production deployment on Vercel with separate backend:
# Replace with your actual Vercel frontend URL
FRONTEND_URL=https://your-project-name.vercel.app

# Authentication
DEFAULT_PASSWORD=Admin!234
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
SESSION_SECRET=wechat-session-secret-key-2024-development-only

# WeChat API Configuration
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
USE_REAL_WECHAT_API=false

# AI Configuration
AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=your-deepseek-api-key
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# Redis Configuration (optional, for advanced features)
# REDIS_URL=redis://localhost:6379

# For production deployment:
# NODE_ENV=production
# USE_REAL_WECHAT_API=true

# Speech Recognition Configuration
SPEECH_API_PROVIDER=web-speech-api
USE_REAL_SPEECH_API=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info